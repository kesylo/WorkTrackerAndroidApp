<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@drawable/bg_item_list"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
>

    <LinearLayout
            android:layout_marginStart="16dp"
            android:id="@+id/linearItem"
            android:orientation="vertical"
            android:layout_width="82dp"
            android:layout_height="match_parent">

        <TextView
                android:text="12"
                android:textColor="@color/colorRed"
                android:layout_width="match_parent"
                android:layout_marginTop="9dp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewCreationDay"
                android:fontFamily="@font/montserrat"
                android:textAlignment="center"
                android:typeface="normal"
                android:textSize="46sp"
                android:textStyle="bold"
                android:textAllCaps="false"/>
        <TextView
                android:text="Dec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewCreationMonth"
                android:layout_marginTop="-15dp"
                android:fontFamily="@font/montserrat"
                android:textAlignment="center"
                android:textSize="18sp" android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:layout_height="match_parent">

        <TextView
                android:layout_marginTop="15dp"
                android:text="22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewHourFrom"
                android:fontFamily="@font/montserrat"
                android:textAlignment="center"
                android:layout_marginBottom="16dp"
                android:textSize="46sp"
                android:textColor="@color/colorBlack"/>
        <TextView
                android:layout_marginTop="15dp"
                android:text="h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewH1"
                android:fontFamily="@font/montserrat"
                android:layout_marginBottom="16dp"
                android:textSize="46sp"
                android:textColor="@color/colorBlack"/>
        />
        <TextView
                android:layout_marginTop="15dp"
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewSepBar"
                android:fontFamily="@font/montserrat"
                android:layout_marginBottom="16dp"
                android:textSize="46sp"
                android:textColor="@color/colorBlack"/>
        />
        <TextView
                android:layout_marginTop="15dp"
                android:text="06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewHourTo"
                android:fontFamily="@font/montserrat"
                android:layout_marginBottom="16dp"
                android:textSize="46sp"
                android:textColor="@color/colorBlack"/>
        />
        <TextView
                android:layout_marginTop="15dp"
                android:text="h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewH2"
                android:fontFamily="@font/montserrat"
                android:layout_marginBottom="16dp"
                android:textSize="46sp"
                android:textColor="@color/colorBlack"/>


        <Button
                android:layout_marginStart="22dp"
                android:layout_marginTop="5dp"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:id="@+id/buttonDelete"
                android:background="@drawable/custom_delete_button"/>

    </LinearLayout>


</LinearLayout>