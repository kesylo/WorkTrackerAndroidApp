<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorOffwhite"
        tools:context=".MainActivity"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:id="@+id/linearLayout"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Ajouter un jour de travail"
                  android:layout_marginTop="18dp"
                  android:textColor="#FFF"
                  android:textAlignment="center"
                  android:textSize="32sp"
                  android:padding="16dp"
                  android:fontFamily="@font/montserrat"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="504dp"
            android:background="@drawable/bg_item_list"
            android:paddingTop="22dp"
            android:layout_marginTop="-40dp"
            android:paddingBottom="8dp">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/txtTempsTotal"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"
                    android:visibility="visible"
                    android:fontFamily="@font/montserrat"
                    android:text="00h:00 de travail"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/editDateCreation"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button4"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline2"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline4"
                    android:layout_marginEnd="8dp" android:layout_marginStart="8dp"/>
            <Button
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/custom_calendar_button"
                    android:id="@+id/button4"
                    app:layout_constraintStart_toEndOf="@+id/txtTempsTotal" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@+id/guideline2" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/guideline4"/>
            <TextView
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/montserrat"
                    android:text="Date de création :"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/guideline2" android:id="@+id/textView3"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"/>
            <TextView
                    android:id="@+id/editDateCreation"
                    android:textSize="28sp"
                    android:textColor="@color/colorRed"
                    android:fontFamily="@font/montserrat"
                    android:text="12-55-19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/txtTempsTotal" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@+id/guideline2" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/guideline4"/>
            <android.support.constraint.Guideline
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/guideline2" app:layout_constraintGuide_percent="0.08"/>
            <TextView
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Début du Shift :"
                    android:fontFamily="@font/montserrat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@+id/guideline4" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/guideline5" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:id="@+id/textView5"/>
            <android.support.constraint.Guideline
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/guideline4" app:layout_constraintGuide_percent="0.2"/>
            <TextView
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Fin du Shift :"
                    android:fontFamily="@font/montserrat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@+id/guideline6" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/guideline7" android:id="@+id/textView6"
                    android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
            <EditText
                    android:id="@+id/editHeureFin"
                    android:textSize="18sp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:paddingStart="8dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Sélectionnez une heure"
                    android:fontFamily="@font/montserrat"
                    android:textColorHint="#B5B5B5"
                    android:textColor="@color/colorBlack"
                    android:background="@drawable/input_bg_unselected"
                    android:layout_width="302dp"
                    android:layout_height="41dp" android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/buttonSelectHeureFin" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@+id/guideline7"
                    app:layout_constraintBottom_toTopOf="@+id/guideline8" android:layout_marginBottom="8dp"/>
            <EditText
                    android:id="@+id/editHeureDebut"
                    android:textSize="18sp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:paddingStart="8dp"
                    android:focusableInTouchMode="false"
                    android:hint="Sélectionnez une heure"
                    android:fontFamily="@font/montserrat"
                    android:textColorHint="#B5B5B5"
                    android:textColor="@color/colorBlack"
                    android:background="@drawable/input_bg_unselected"
                    android:layout_width="302dp"
                    android:layout_height="41dp" android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/buttonSelectHeureDebut" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@+id/guideline5"
                    app:layout_constraintBottom_toTopOf="@+id/guideline6" android:layout_marginBottom="8dp"/>
            <Button
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/custom_hour_selector_button"
                    android:id="@+id/buttonSelectHeureDebut"
                    app:layout_constraintStart_toEndOf="@+id/editHeureDebut" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@+id/guideline5" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/guideline6"/>
            <android.support.constraint.Guideline
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/guideline5" app:layout_constraintGuide_percent="0.28"/>
            <android.support.constraint.Guideline
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/guideline6" app:layout_constraintGuide_percent="0.4"/>
            <android.support.constraint.Guideline
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/guideline7" app:layout_constraintGuide_percent="0.48"/>
            <android.support.constraint.Guideline
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/guideline8" app:layout_constraintGuide_percent="0.6"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorRed"
                    android:id="@+id/txtErrorLog"
                    android:textSize="16sp"
                    android:visibility="invisible"
                    android:fontFamily="@font/montserrat"
                    android:layout_height="wrap_content"
                    android:text="Aucune action requise"
                    android:gravity="bottom|center"

                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@+id/guideline9" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"/>
            <Button
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/custom_hour_selector_button"
                    android:id="@+id/buttonSelectHeureFin"
                    app:layout_constraintStart_toEndOf="@+id/editHeureFin" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@+id/guideline7" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/guideline8"/>
            <android.support.constraint.Guideline
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/guideline9" app:layout_constraintGuide_percent="0.92"/>
        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:gravity="center|bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:id="@+id/btnEnregistrer"
                    android:text="Enregistrer"
                    android:textColor="#FFF"
                    android:background="@drawable/selector_button_enregistrer"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/btnAnnuler" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"/>
            <Button

                    android:id="@+id/btnAnnuler"
                    android:text="Annuler"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#FFF"
                    android:background="@drawable/selector_button_cancel"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnEnregistrer"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>


</LinearLayout>